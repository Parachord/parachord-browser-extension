{
  "manifest_version": 3,
  "name": "Parachord",
  "version": "0.2.1",
  "description": "Connect your browser to Parachord desktop for playback control and content discovery",
  "permissions": [
    "activeTab",
    "scripting",
    "alarms",
    "tabs",
    "contextMenus",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://*.bandcamp.com/*",
    "https://bandcamp.com/*",
    "https://open.spotify.com/*",
    "https://music.apple.com/*",
    "https://www.last.fm/*",
    "https://last.fm/*",
    "https://listenbrainz.org/*",
    "https://pitchfork.com/*",
    "https://soundcloud.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*",
        "https://youtube.com/watch*",
        "https://*.bandcamp.com/track/*",
        "https://*.bandcamp.com/album/*",
        "https://bandcamp.com/*/playlist/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://open.spotify.com/*"
      ],
      "js": ["content-spotify.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "https://music.apple.com/*"
      ],
      "js": ["content-applemusic.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "https://pitchfork.com/reviews/albums/*",
        "https://pitchfork.com/reviews/tracks/*"
      ],
      "js": ["content-pitchfork.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://soundcloud.com/*"
      ],
      "js": ["content-soundcloud.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
